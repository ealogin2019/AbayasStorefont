# Public variables (prefixed with VITE_PUBLIC_)
VITE_PUBLIC_BUILDER_KEY="__BUILDER_PUBLIC_KEY__"
VITE_API_BASE_URL="http://localhost:3000"

# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"

# Ping test message
