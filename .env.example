# =============================================================================
# üîí Environment Configuration Example
# =============================================================================
# Copy this file to .env and update with your values
# ‚ö†Ô∏è NEVER commit .env file - it's in .gitignore
# =============================================================================

# ============= DATABASE =============
# Local Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production PostgreSQL example:
# DATABASE_URL="postgresql://user:password@localhost:5432/abayas_db"

# ============= SERVER =============
NODE_ENV="development"
PORT=3000

# JWT Secrets (change in production!)
JWT_SECRET="change-this-in-production-to-a-secure-random-string"
JWT_EXPIRES_IN="7d"

# ============= FRONTEND CONFIG =============
VITE_PUBLIC_BUILDER_KEY="__BUILDER_PUBLIC_KEY__"
VITE_API_BASE_URL="http://localhost:3000"

# ============= PING MESSAGE =============
PING_MESSAGE="ping pong"

# ============= STRIPE INTEGRATION =============
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_xxxx"
STRIPE_PUBLIC_KEY="pk_test_xxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxx"

# ============= EMAIL SERVICE (Optional) =============
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="noreply@abayasstore.com"

# ============= CORS CONFIGURATION =============
# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"

# ============= IMAGE UPLOAD =============
# Local storage path for uploads (relative to server/src)
UPLOAD_DIR="./public/uploads"
# Or use cloud storage:
# AWS_S3_BUCKET="your-bucket"
# AWS_S3_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="xxxx"
# AWS_SECRET_ACCESS_KEY="xxxx"

# ============= LOGGING =============
LOG_LEVEL="debug"

# ============= FEATURES =============
ENABLE_PLUGINS="false"
ENABLE_IMAGE_OPTIMIZATION="true"
