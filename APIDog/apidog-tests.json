    {
      "name": "2. Product Management",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Black Abaya Premium\",\n  \"description\": \"Premium black abaya with embroidery\",\n  \"price\": 89.99,\n  \"stock\": 100,\n  \"image\": \"https://example.com/abaya1.jpg\",\n  \"tags\": [\"black\", \"premium\", \"embroidery\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/products",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('product_id', jsonData.id);",
                  "    pm.test('Product created successfully', function() {",
                  "        pm.expect(jsonData.id).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "List All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/products?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Black Abaya Premium - Updated\",\n  \"description\": \"Premium black abaya with beautiful embroidery\",\n  \"price\": 99.99,\n  \"stock\": 150\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "{{product_id}}"]
            }
          }
        },
        {
          "name": "Bulk Update Stock",
          "request": {
            "method": "POST",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}",
                  "type": "string"
                }
              ]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"updates\": [\n    {\n      \"productId\": \"{{product_id}}\",\n      \"stock\": 200\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/products/bulk/update-stock",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products", "bulk", "update-stock"]
            }
